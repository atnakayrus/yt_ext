{
    "name": "YT Tools",
    "version": "0.1.0",
    "description": "3x youtube speed",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/icon.png",
            "24": "assets/icon.png",
            "32": "assets/icon.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/btn.html"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ],
    "manifest_version": 3
}